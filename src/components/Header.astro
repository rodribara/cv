    */
  }
  .title-wrapper {
    width: 650px;
  }
  .profile-pic {
    border-radius: 50%;
    margin-top: 1rem;
    box-shadow: 50px 50px 0px #fe5980;
  }

  .gradient-text {
    background: #26273f;
    background: linear-gradient(to bottom right, #26273f 16%, #ff6464 62%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  a {
    margin: 0 0.5rem;
    font-weight: 200;
    text-decoration: none;
    color: #26273f;
