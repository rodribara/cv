---
import { Image } from "astro:assets";
import profile from "../../public/images/profile.png";
---

<main>
  <header>
    <div class="flex justify-center align-middle flex-col-reverse md:flex-row">
      <div class="md:max-w-md flex items-center gap-9 self-center flex-col">
        <h1 class="text-base w-full md:text-6xl">
          Hey, I'm <span class="name">Rodrigo Baragona</span>,
          <span class="subtitle">a</span>
          <span class="role"> full.stack developer</span>
        </h1>
        <div class="flex flex-nowrap flex-col w-full md:max-w-md">
          <h3 class="subtitle text-base md:text-3xl self-start">
            Developing solutions
          </h3>
          <h3 class="md:text-3xl gradient-text self-center">through</h3>
          <h3 class="subtitle md:text-3xl name role self-end">
            inventive design
          </h3>
        </div>
      </div>
      <Image src={profile} alt="Profile pic" class="profile-pic" />
    </div>
  </header>
</main>

