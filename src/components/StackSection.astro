---
import Stack from "./Stack/Stack.astro";
import stack from "../data/stack.json";
---

<main>
  <div class="flex justify-center flex-col items-center gap-2">
    <h2 class="text-5xl font-bold">main.stack</h2>
    <hr class="horizontal-line h-1 w-12 rounded-md" />
  </div>
  <div class="flex flex- items-center justify-center gap-9">
    <Stack techs={stack.mainStack.frontend} />
    <Stack techs={stack.mainStack.backend} />
    <Stack techs={stack.mainStack.management} />
  </div>
  <div class="flex justify-center flex-col items-center gap-2">
    <h3 class="text-3xl font-bold">complementary.stack</h3>
    <hr class="horizontal-line w-12 rounded-md" />
  </div>
  <div class="flex flex-col items-center">
    <Stack techs={stack.mainStack.backend} />
  </div>
</main>

<style>
  .horizontal-line {
    color: #26273f;
    border: none;
    height: 5px;
    background-color: #26273f;
  }
</style>
