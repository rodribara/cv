---
import Experience from "./Experience/Experience.astro";
import experience from "../data/experience.json";
---

<main>
  <div class="flex justify-center flex-col items-center gap-2">
    <h2 class="text-5xl font-bold">Experience</h2>
    <hr class="horizontal-line h-1 w-12 rounded-md" />
  </div>
  <div class="flex flex-col items-center">
    {experience.experiences.map((tech) => <Experience experience={tech} />)}
  </div>
</main>

<style>
  .horizontal-line {
    color: #26273f;
    border: none;
    height: 5px;
    background-color: #26273f;
  }
</style>
