---
import Divider from "../Divider.astro";
import ExperienceDetails from "./ExperienceDetails.astro";
import RoleDescription from "./RoleDescription.astro";

export interface ExperienceProps {
  image: string;
  name: string;
  organization: string;
  mainRole: string;
  roleDescription: {
    frontend: string[];
    backend: string[];
    management: string[];
  };
  experienceType: string;
  description: string;
}

const {
  experience: {
    image,
    name,
    organization,
    mainRole,
    roleDescription: { frontend, backend, management },
    description,
    experienceType,
  },
} = Astro.props as { experience: ExperienceProps };
---

<div class="flex flex-col items-center">
  <div class="flex items-start flex-col md:flex-row">
    <ExperienceDetails
      image={image}
      name={name}
      organization={organization}
      mainRole={mainRole}
      experienceType={experienceType}
      description={description}
    />
    <RoleDescription
      frontend={frontend}
      backend={backend}
      management={management}
    />
  </div>
</div>
<Divider />
