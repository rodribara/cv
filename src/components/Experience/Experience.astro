---
import Divider from "../Divider.astro";
import ExperienceDetails from "./ExperienceDetails.astro";
import RoleStack from "./RoleStack.astro";

export interface ExperienceProps {
  image: string;
  name: string;
  organization: string;
  mainRole: string;
  roleStack: {
    frontend: string[];
    backend: string[];
    management: string[];
  };
  experienceType: string;
  description: string;
}

const {
  experience: { roleStack, ...experience },
} = Astro.props as { experience: ExperienceProps };
---

<div class="flex flex-col items-center">
  <div class="flex items-start flex-col md:flex-row">
    <ExperienceDetails experience={experience} />
    <RoleStack roleStack={roleStack} />
  </div>
</div>
<Divider />
