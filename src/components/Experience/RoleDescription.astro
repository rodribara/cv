---
import TechnologyList from "./TechnologyList.astro";

export interface RoleDescriptionProps {
  frontend: string[];
  backend: string[];
  management: string[];
}

const { frontend, backend, management } = Astro.props as RoleDescriptionProps;
---

<div
  class="flex flex-col items-center m-3.5 border-red-50 border-4 w-full md:w-1/2"
>
  <div class="flex flex-row md:flex-col items-center justify-around w-full">
    <TechnologyList title="Frontend" technologies={frontend} />
    <TechnologyList title="Backend" technologies={backend} />
    <TechnologyList title="Management" technologies={management} />
  </div>
</div>
