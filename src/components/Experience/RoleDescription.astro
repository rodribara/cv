---
import TechnologyList from "./TechnologyList.astro";

export interface RoleDescriptionProps {
  frontend: string[];
  backend: string[];
  management: string[];
}

const { frontend, backend, management } = Astro.props as RoleDescriptionProps;
---

<div class="flex flex-col items-center m-3.5 w-full md:w-1/2">
  <div
    class="flex flex-row md:flex-col md:items-center justify-around w-full sm:items-start flex-wrap sm:gap-10"
  >
    <TechnologyList title="front.end" technologies={frontend} />
    <TechnologyList title="back.end" technologies={backend} />
    <TechnologyList title="management" technologies={management} />
  </div>
</div>
