---
import Image from "astro/components/Image.astro";
import { techIcon } from "@components/Icon.astro";
import type { TechIconKey } from "@components/Icon.astro";
export interface TechnologyListProps {
  title: string;
  techs: TechIconKey[];
}
const { title, techs } = Astro.props as TechnologyListProps;
---

<div class="flex justify-center items-center flex-col align-bottom">
  <h4 class="text-3xl font-medium" aria-label={title} aria-labelledby={title}>
    {title}
  </h4>
  <ul
    class="inline-flex flex-wrap gap-6 flex-row justify-center m-2 items-end mx-14"
  >
    {
      techs.map((tech) => (
        <li class="flex justify-center flex-col items-center gap-4">
          <Image src={techIcon[tech].icon} alt={tech} class="w-24" />
          <p>.{techIcon[tech].name}</p>
        </li>
      ))
    }
  </ul>
</div>
